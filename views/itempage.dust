  <div class="container text-center">
    <h1><u>Item Details</u></h1>
    <div class="row">
      <div class="col-sm-12">
        <img src="/images/dummy.png" id="icon">
        <h4>Teddy Bear</h4>
      </div>
    </div>
    <div class="col-sm-8">
      <table class="table">
        <tbody>
          <tr>
            <td><strong>Owner:</strong></td>
